<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD//EN" "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd"> 
<hibernate-mapping>
	<class name="br.com.pessoa.Pessoa" catalog="introhibernate" table="pessoa">
		<id name="id" type="int" column="id">
			<generator class="increment"/>
		</id>
		<property name="nome" type="string" column="nome" />
		<property name="apelido" type="string" column="apelido" />
		<property name="endereco" type="string" column="endereco" />
	</class>
</hibernate-mapping>